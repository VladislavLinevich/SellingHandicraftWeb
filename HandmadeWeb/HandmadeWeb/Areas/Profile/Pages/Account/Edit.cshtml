@model HandmadeWeb.Areas.Profile.Pages.Account.EditModel

@section Links {
    <link rel="stylesheet" href="~/css/profile-form.css" />
}

<form class="profile-form" method="post" enctype="multipart/form-data">
    <h2>Изменить профиль</h2>
    <div asp-validation-summary="ModelOnly" class="error"></div>
    <input type="hidden" asp-for="User.Id" />
    <input type="hidden" asp-for="User.Avatar" />

    <label class="profile-form__label">Имя пользователя</label>
    <input asp-for="User.UserName" class="profile-form__input" aria-required="true" placeholder="Укажите имя пользователя" />
    <span asp-validation-for="User.UserName" class="error"></span>

    <label class="profile-form__label">Электронная почта</label>
    <input asp-for="User.Email" class="profile-form__input" aria-required="true" placeholder="Укажите Email" />
    <span asp-validation-for="User.Email" class="error"></span>

    <label class="profile-form__label">Изображение профиля</label>
    <input type="file" name="image" />

    <button value="Save" class="profile-form__button" type="submit">Сохранить</button>
</form>

