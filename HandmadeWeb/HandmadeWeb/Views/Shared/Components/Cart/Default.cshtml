@model List<CartItem>

<li>
    <a class="cart" asp-controller="Cart" asp-action="Index">
        <img class="cart__img" src="~/images/shopping-cart.png">
        @if (@Model.Count > 0)
        {
            <p class="cart__counter">
                @Model.Count
            </p>
        }
    </a>
</li>

